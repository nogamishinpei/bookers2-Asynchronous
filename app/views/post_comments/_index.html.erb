<table class="table">
  <% @book.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to (post_comment.user) do %>
        <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
        <%= post_comment.user.name %>
        <% end %>
      </td>
    
      <td>
        <%= post_comment.comment %>
      <td>

      <td>
        <% if post_comment.user_id == current_user.id %>
          <%= link_to "delete", book_post_comment_path(book, post_comment), method: :delete, remote: true, class:'btn btn-sm btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>